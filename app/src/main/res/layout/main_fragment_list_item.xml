<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TextView
        android:id="@+id/main_fragment_object_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="Название объекта"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/main_fragment_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_weight="100"
        android:gravity="bottom"
        android:text="Прораб"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_object_title"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/main_fragment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_weight="100"
        android:gravity="bottom"
        android:text="Вышло на работу : "
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_1"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/main_fragment_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="100"
        android:gravity="bottom"
        android:text="Всего : "
        app:layout_constraintStart_toEndOf="@+id/main_fragment_today"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_1" />
    <TextView
        android:id="@+id/main_fragment_prorab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="100"
        android:text="Имя прораба"
        app:layout_constraintStart_toEndOf="@+id/main_fragment_1"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_object_title" />

    <TextView
        android:id="@+id/main_fragment_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="000"
        app:layout_constraintStart_toEndOf="@+id/main_fragment_2"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_prorab_name" />

    <TextView
        android:id="@+id/main_fragment_allperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="000"
        app:layout_constraintStart_toEndOf="@+id/main_fragment_3"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_prorab_name" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_object_title"
        tools:layout_editor_absoluteX="8dp" />

    <ProgressBar
        android:id="@+id/main_fragment_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_2"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>
